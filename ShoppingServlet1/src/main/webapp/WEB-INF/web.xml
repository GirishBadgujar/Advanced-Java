<servlet>
<servlet-name>Authenticate</servlet-name>
<servlet-class>gana.basic.Shopping.Authenticate</servlet-class>

<init-param>
<param-name>driverClass</param-name>
<param-value>com.mysql.cj.jdbc.Driver</param-value>
</init-param>

<init-param>
<param-name>url</param-name>
<param-value>jdbc:mysql://localhost/advanced_java</param-value>
</init-param>

<init-param>
<param-name>dbUser</param-name>
<param-value>GirishDB</param-value>
</init-param>

<init-param>
<param-name>dbPassword</param-name>
<param-value>cdac</param-value>
</init-param>
</servlet>

<servlet-mapping>
<servlet-name>Authenticate</servlet-name>
<url-pattern>/Authenticate</url-pattern>
</servlet-mapping>

